          "sham": "low-intensity 5 Hz",
          "primaryOutcome": {
            "fiq_total": { "baseline": 63.1, "post": 48.9, "meanChange": -14.2, "p": 0.001, "es": 0.85 }
          },
          "secondary": {
            "pain_vas": { "meanChange": -21, "p": 0.002 },
            "psqi": { "meanChange": -2.1, "p": 0.01 }
